@model resqdoc.Models.Cobrade

@{
    ViewData["Title"] = "Edit";
}

<div class="container">

    <h1></h1>

    <h4>Edite o cobrade...</h4>
    <hr />
    <div class="row">
        <div class="">
            <form asp-action="Edit">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <div class="form-group">
                    <label asp-for="Cod" class="control-label"></label>
                    <input asp-for="Cod" class="form-control" />
                    <span asp-validation-for="Cod" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Descricao" class="control-label"></label>
                    <input asp-for="Descricao" class="form-control" />
                    <span asp-validation-for="Descricao" class="text-danger"></span>
                </div>
                </br>
                <div class="form-group d-grid gap-2">
                    <input type="submit" value="Salvar" class="btn btn-primary" />
                </div>
            </form>
        </div>
    </div>

    <div class="form-group d-grid mt-1">
        <a class="btn btn-voltar" asp-action="Index">Voltar</a>
    </div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
