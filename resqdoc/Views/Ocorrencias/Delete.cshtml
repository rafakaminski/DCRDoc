@model ResqDoc.Models.Ocorrencia

@{
    ViewData["Title"] = "Delete";
}

<div class="container">

    <h1></h1>

    <h3>Você tem certeza que deseja excluir essa ocorrencia?</h3>
    <div>
        <h4></h4>
        <hr />
        <dl class="row">
            <dt class = "col-sm-2">
                @Html.DisplayNameFor(model => model.Titulo)
            </dt>
            <dd class = "col-sm-10">
                @Html.DisplayFor(model => model.Titulo)
            </dd>
            <dt class = "col-sm-2">
                @Html.DisplayNameFor(model => model.Gravidade)
            </dt>
            <dd class = "col-sm-10">
                @Html.DisplayFor(model => model.Gravidade)
            </dd>
            <dt class = "col-sm-2">
                @Html.DisplayNameFor(model => model.Data)
            </dt>
            <dd class = "col-sm-10">
                @Html.DisplayFor(model => model.Data)
            </dd>
            <dt class = "col-sm-2">
                @Html.DisplayNameFor(model => model.Cobrade)
            </dt>
            <dd class = "col-sm-10">
                @Html.DisplayFor(model => model.Cobrade)
            </dd>
        </dl>
        <div class = "d-grid">
            <form asp-action="Delete">
                <input type="hidden" asp-for="Id" />
                <input type="submit" value="Excluir" class="btn btn-danger" />
                <a class="btn btn-primary" href="@Url.Action("Index", "Ocorrencias")">Cancelar</a>
            </form>
        </div>
    </div>
</div>


